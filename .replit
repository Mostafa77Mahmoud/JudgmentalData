modules = ["python-3.11"]
run = "python app.py"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", "python app.py"]

[workflows]
runButton = "Streamlit App"

[[workflows.workflow]]
name = "Run Pipeline"
author = 47083209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --smoke --lang ar"

[[workflows.workflow]]
name = "streamlit"
mode = "sequential"
author = 47083209

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Streamlit App"
author = 47083209
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.address=0.0.0.0 --server.port=5000"

[[ports]]
localPort = 5000
externalPort = 80
